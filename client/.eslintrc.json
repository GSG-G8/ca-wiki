{
    "parser": "babel-eslint",
    "extends": [
        "airbnb",
        "prettier",
        "prettier/react"
    ],
    "parserOptions": {
        "es6": true,
        "ecmaFeatures": {
            "impliedStrict": true
        }
    },
    "settings": {
        "import/resolver": {
          "node": {
            "extensions": [".js", ".jsx"]
          }
        }
      },
    "root": true,
    "env": {
        "browser": true
    },
    "rules": {
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        "quotes": [
            2,
            "single",
            {
                "avoidEscape": true,
                "allowTemplateLiterals": true
            }
        ],
        "prettier/prettier": [
            "error",
            {
                "trailingComma": "es5",
                "singleQuote": true
            }
        ],
        "react/state-in-constructor": [0, "always"]
    },
    "plugins": [
        "react",
        "prettier"
    ]
}
